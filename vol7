            </div> <div class="navigation-controls">
                <button class="nav-button" id="prevBtn" disabled><i class="fas fa-chevron-left"></i></button>
                <button class="nav-button" id="nextBtn"><i class="fas fa-chevron-right"></i></button>
            </div>
        </div> </div> <script>
        class PresentationController {
            constructor() {
                this.currentSlide = 1;
                this.totalSlides = 13; 
                this.menuItems = document.querySelectorAll('.slide-menu-item');
                this.prevBtn = document.getElementById('prevBtn');
                this.nextBtn = document.getElementById('nextBtn');
                this.progressFill = document.getElementById('progressFill');
                this.slideIndicator = document.getElementById('slideIndicator');
                this.sidebar = document.getElementById('sidebar');
                
                this.init();
            }
            
            init() {
                this.bindEvents();
                this.updateUI();
                this.initChart(); // チャート初期化を追加
            }

            initChart() {
                const chartElement = document.getElementById('inflowChart');
                if (chartElement) {
                    const ctx = chartElement.getContext('2d');
                    new Chart(ctx, {
                        type: 'doughnut',
                        data: {
                            labels: ['検索エンジン', 'SNS', 'AI回答', 'その他'],
                            datasets: [{
                                data: [38, 27, 9, 26],
                                backgroundColor: ['#3b82f6', '#10b981', '#f59e0b', '#6b7280'],
                                borderColor: '#ffffff',
                                borderWidth: 3
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: { display: false },
                                tooltip: {
                                    callbacks: { label: context => `${context.label}: ${context.raw}%` },
                                    titleFont: { size: 16 }, bodyFont: { size: 14 }
                                }
                            },
                            cutout: '55%'
                        }
                    });
                }
            }
            
            bindEvents() {
                this.menuItems.forEach(item => {
                    item.addEventListener('click', (e) => {
                        const slideNum = parseInt(e.currentTarget.dataset.slide);
                        this.goToSlide(slideNum);
                        if (window.innerWidth <= 768) { // スマホ表示時にメニューを閉じる
                            this.sidebar.classList.remove('open');
                        }
                    });
                });
                
                this.prevBtn.addEventListener('click', () => this.previousSlide());
                this.nextBtn.addEventListener('click', () => this.nextSlide());
                
                document.addEventListener('keydown', (e) => {
                    if (e.target.tagName === 'INPUT' || e.target.tagName === 'TEXTAREA') return; // 入力中は無効
                    switch(e.key) {
                        case 'ArrowLeft': e.preventDefault(); this.previousSlide(); break;
                        case 'ArrowRight': e.preventDefault(); this.nextSlide(); break;
                        case 'Home': e.preventDefault(); this.goToSlide(1); break;
                        case 'End': e.preventDefault(); this.goToSlide(this.totalSlides); break;
                        case 'm': // 'm'キーでモバイルメニュー開閉トグル (デバッグ用など)
                            if (window.innerWidth <= 768) {
                                this.sidebar.classList.toggle('open');
                            }
                            break;
                    }
                });
                
                // Mobile menu toggle logic ( improved )
                // Add a dedicated hamburger button or similar for better UX if needed
                // For now, clicking outside sidebar closes it
                document.addEventListener('click', (e) => {
                    if (window.innerWidth <= 768 && this.sidebar.classList.contains('open')) {
                        if (!this.sidebar.contains(e.target) && !e.target.closest('.nav-button') && !e.target.closest('.slide-menu-item')) {
                             // Check if click is not on a menu toggle button if you add one
                            const isMenuToggle = e.target.closest('[data-action="toggle-sidebar"]'); // Example
                            if(!isMenuToggle) {
                                this.sidebar.classList.remove('open');
                            }
                        }
                    }
                });
            }
            
            goToSlide(slideNum) {
                if (slideNum < 1 || slideNum > this.totalSlides || slideNum === this.currentSlide) return;
                
                const currentSlideElement = document.getElementById(`slide${this.currentSlide}`);
                const targetSlideElement = document.getElementById(`slide${slideNum}`);

                if (currentSlideElement) {
                    currentSlideElement.classList.remove('active');
                    // Optionally add 'prev' class for specific exit animation if needed
                    // if (slideNum < this.currentSlide) currentSlideElement.classList.add('prev');
                }
                
                if (targetSlideElement) {
                    targetSlideElement.classList.add('active');
                }
                
                this.currentSlide = slideNum;
                this.updateUI();
            }
            
            nextSlide() {
                if (this.currentSlide < this.totalSlides) {
                    this.goToSlide(this.currentSlide + 1);
                }
            }
            
            previousSlide() {
                if (this.currentSlide > 1) {
                    this.goToSlide(this.currentSlide - 1);
                }
            }
            
            updateUI() {
                this.menuItems.forEach((item, index) => {
                    item.classList.toggle('active', (index + 1) === this.currentSlide);
                });
                
                this.prevBtn.disabled = this.currentSlide === 1;
                this.nextBtn.disabled = this.currentSlide === this.totalSlides;
                
                const progress = (this.currentSlide / this.totalSlides) * 100;
                this.progressFill.style.width = `${progress}%`;
                
                this.slideIndicator.textContent = `${this.currentSlide} / ${this.totalSlides}`;
                
                const activeItem = document.querySelector('.slide-menu-item.active');
                if (activeItem) {
                    activeItem.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                }

                // Ensure previously active slide is fully hidden if using complex transitions
                document.querySelectorAll('.slide').forEach(slide => {
                    if (slide.id !== `slide${this.currentSlide}`) {
                        slide.classList.remove('active');
                    }
                });
                const activeSlide = document.getElementById(`slide${this.currentSlide}`);
                if (activeSlide) {
                    activeSlide.classList.add('active');
                    activeSlide.scrollTop = 0; // Go to top of new slide
                }
            }
        }
        
        document.addEventListener('DOMContentLoaded', () => {
            window.presentationController = new PresentationController();
        });
        
        window.addEventListener('resize', () => {
            if (window.innerWidth > 768) {
                const sidebar = document.getElementById('sidebar');
                if(sidebar) sidebar.classList.remove('open');
            }
        });
    </script>
</body>
</html>
